---
const socials = [
  {
    name: 'GitHub',
    url: 'https://github.com/harryjmoss',
    icon: 'i-uil-github',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/harryjamesmoss/',
    icon: 'i-uil-linkedin',
  },
  {
    name: 'OrcID',
    url: 'https://orcid.org/0000-0001-6497-3619',
    icon: 'custom-orcid',
  },
];
---

<section class='md:hidden'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-between'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-green border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
          {item.icon === 'custom-orcid' ? (
          // Render custom SVG for the ORCID icon
          <img src="/icon/orcid-mobile.svg" alt={item.name} class="w-6 h-6" />
        ) : (
          // Render default Iconify icons
          <div class:list={[item.icon, 'w-6 h-6']} />
        )}
          </a>
        </li>
      ))
    }
  </ul>
</section>
